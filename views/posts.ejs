<!doctype html>
<html>
<head>
  <% include partials/head %>
  <style>
      body        { padding-top:80px; }
  </style>
</head>
<body>
  <div class="container">
  <div class="col-sm-6 col-sm-offset-3">
  <h2>Here are all the posts</h2>
  <ul>
  <% posts.forEach(function (post) { %>
    <li><a href="/posts/<%= post.id %>"><%=post.title  %></a> - <%=post.username %></li>
  <% }) %>
  </ul>
  <hr>
  <a href="/posts/new">Add a new post</a>
  <hr>
  <a href="/auth">home</a>
</div>
</div>
</body>
</html>
